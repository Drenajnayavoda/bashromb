#!/bin/bash

# скрипт состоит из двух больших циклов, которые строят две части ромба.

var1=$1

# var1 - длина ромба

echo $var1

var2=$(($var1 - 1))

echo $var2

echo "Ваш ромб длинной в $var1 единиц:"
        
# верхняя часть ромба:

for ((i = 0; i < var1; i++)) do
  
  for ((j = 0; j < var2+var1; j++)) do # цикл отступа от начала строки.
    echo -n " "
  done
  
  for ((j = 0; j < var1-var2; j++)) do # цикл отрисовки одной строки ромба.
    echo -n "."
    echo -n " "
  done
  
  echo
  var2=$(($var2 - 1)) # отнимаем от переменной var2 один, чтобы в цикле отрисовки строки ромба в следующем большом цикле-
done                  # строка была на одину точку больше, а тоступ от начала строки уменьшился, чтобы получился ровный ромб.

# нижняя часть ромба:

var2=1 # теперь var2 равен единице ведь цикл нижней части должен работать наоборот.
for ((i = 0; i < var1;i++)) do
  
  for ((j = 0; j < var2+var1; j++)) do # такой же цикл отступа от начала строки.
    echo -n " "
  done
  
  for ((j = 0; j < var1-var2; j++)) do # такой же цикл отрисовки одной строки ромба.
    echo -n "."
    echo -n " "
  done 
  
  echo
  var2=$(($var2 + 1)) # а теперь прибавляем к переменной var2 один, чтобы в цикле отрисовки строки ромба в следующем большом цикле-
done                  # строка была на одину точку меньше, а тоступ от начала строки увеличился, чтобы получился ровный ромб.

exit 0
