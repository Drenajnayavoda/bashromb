#!/bin/bash


while read -r -n 1 x; do
  nums+=("$x")
done <<< $1

min=${nums[0]}
indx_min=0

max=${nums[0]}
indx_max=0

for ((i = 1; i < $((${#nums[@]} - 1 )); i++)); do
  if ((${nums[$i]} < $min)); then
    min=${nums[$i]}
    indx_min=$i
  fi

  if ((${nums[$i]} > $max)); then
    max=${nums[$i]}
    indx_max=$i
  fi

done

if (( $min == ${nums[0]} )); then

  res="["

    for ((i = 0; i < ${#nums[@]}; i++)); do
      if (( $i == $indx_max)); then
        continue
        fi
        res=$res${nums[$i]}
    done

    res=$res$max", "$index_max", "$((${#nums[@]} - 1))]"]"

else

  res="["$min

  for ((i = 0; i < ${#nums[@]}; i++)); do
    if (( $i == $indx_min)); then
      continue
      fi
      res=$res${nums[$i]}
  done

  res=$res", "$indx_min", 0]"

fi

echo ${res}

exit 0
